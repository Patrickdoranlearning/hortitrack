// Only authenticated users can read batches; writes only via Cloud Functions/Admin (or locked paths).
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() { return request.auth != null; }
    function isAdmin() { return isAuthed() && request.auth.token.role == "admin"; }

    match /batches/{id} {
      allow read: if isAuthed();         // clients can read
      allow write: if false;             // block direct client writes
    }

    match /logs/{id} {
      allow read: if isAuthed();
      allow write: if false;
    }

    match /rateLimits/{key} {
      allow read, write: if false;       // server-only
    }
  }
}
