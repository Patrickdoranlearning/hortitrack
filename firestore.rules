
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /batches/{batchId} {
      allow read, write: if isSignedIn();
    }
    match /batches/{batchId}/{document=**} {
      allow read, write: if isSignedIn();
    }
    
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /varieties/{docId} {
      allow read, write: if isSignedIn();
    }

    match /locations/{docId} {
      allow read, write: if isSignedIn();
    }

    match /sizes/{docId} {
      allow read, write: if isSignedIn();
    }

     match /suppliers/{docId} {
      allow read, write: if isSignedIn();
    }

    match /counters/{docId} {
      allow read, write: if isSignedIn(); // For dev, tighten in prod
    }

    // Genkit Firebase plugin collections
    match /genkit-traces/{traceId} {
        allow read, write: if isSignedIn();
    }
    match /genkit-flows/{flowId} {
        allow read, write: if isSignedIn();
    }
    match /genkit-flow-states/{flowId} {
        allow read, write: if isSignedIn();
    }
  }
}

service firebase.storage {
  match /b/{bucket}/o {
    match /batches/{batchId}/photos/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
